{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "./lib",
    "strict": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "lib": ["ES2020"],
    "types": ["node"]
  }
}
