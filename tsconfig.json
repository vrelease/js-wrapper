{
  "compilerOptions": {
    "target": "ES3",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "webpack.config.ts"
  ]
}
