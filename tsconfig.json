{
  "compilerOptions": {
    "target": "ES3",
    "module": "commonjs",
    "outDir": "./lib",
    "strict": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "tests"
  ]
}
