{
  "name": "vrelease-bin",
  "version": "0.3.3-rc.1",
  "description": "binary wrapper for vrelease - a kiss solution to easily create project releases",
  "author": {
    "name": "Caian Ertl",
    "email": "hi@caian.org",
    "url": "https://caian.org"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vrelease/vrelease-js.git"
  },
  "homepage": "https://github.com/vrelease/vrelease-js#readme",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/vrelease/vrelease-js/issues"
  },
  "keywords": [
    "cli-app",
    "cli",
    "bin",
    "binary",
    "vrelease",
    "ci-cd",
    "continuous",
    "delivery",
    "pipeline",
    "release",
    "gitflow",
    "javascript",
    "js",
    "wrapper"
  ],
  "scripts": {
    "build:js": "tsc -p tsconfig.prod.json",
    "bump:dev": "ncu --upgrade --dep dev --target minor",
    "bump:prod": "ncu --upgrade --dep prod --target minor",
    "bump:all": "pnpm run bump:dev && pnpm run bump:prod",
    "fix:style": "biome check --write .",
    "check:lint": "biome check .",
    "commit": "cz",
    "prerelease": "ts-node pre-release-steps.ts",
    "test": "jest --verbose --collect-coverage"
  },
  "main": "lib/wrapper.js",
  "types": "lib/wrapper.d.ts",
  "bin": {
    "vrelease": "lib/cli.js"
  },
  "vrelease": {
    "version": "0.3.2"
  },
  "engines": {
    "node": ">=12"
  },
  "files": [
    "icon.svg",
    "LICENSE",
    "bin/vrelease-*",
    "SHASUM512",
    "lib/wrapper.js",
    "lib/wrapper.d.ts",
    "lib/cli.js"
  ],
  "eslintIgnore": ["lib", "coverage"],
  "lint-staged": {
    "**/*.ts": ["biome check --write --files"]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": ["**/src/**/*.{js,jsx,ts,tsx}", "!src/cli.ts", "!lib/**/*.js"],
    "moduleFileExtensions": ["js", "jsx", "json", "ts", "tsx"],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.prod.json"
      }
    },
    "testPathIgnorePatterns": ["/lib/", "/node_modules/"],
    "coverageThreshold": {
      "global": {
        "lines": 50,
        "statements": 50,
        "branches": 50
      }
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "axios": "^0.26.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "file-to-sha512": "^0.0.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "npm-check-updates": "^12.5.9",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "packageManager": "pnpm@10.14.0"
}
