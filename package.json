{
  "name": "vrelease-bin",
  "version": "0.3.1",
  "description": "binary wrapper for vrelease - a kiss solution to easily create project releases",
  "scripts": {
    "build": "webpack",
    "standard": "standardx --fix ./src/*.ts",
    "prettify": "prettier --no-semi --print-width 100 --single-quote --trailing-comma none --write './src/*.ts'",
    "fix:style": "npm run prettify && npm run standard",
    "check:lint": "eslint --format=codeframe './src/*.ts'",
    "prerelease": "ts-node pre-release-steps.ts"
  },
  "bin": {
    "vrelease": "lib/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vrelease/vrelease-js.git"
  },
  "engines": {
    "node": ">=10"
  },
  "files": [
    "icon.svg",
    "LICENSE",
    "bin/vrelease-*",
    "SHASUM512",
    "lib/cli.js"
  ],
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "author": {
    "name": "Caian R. Ertl",
    "email": "hi@caian.org",
    "url": "https://caian.org"
  },
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/vrelease/vrelease-js/issues"
  },
  "keywords": [
    "cli-app",
    "cli",
    "bin",
    "binary",
    "vrelease",
    "ci-cd",
    "continuous",
    "delivery",
    "pipeline",
    "release",
    "gitflow",
    "javascript",
    "js",
    "wrapper"
  ],
  "homepage": "https://github.com/vrelease/vrelease-js#readme",
  "devDependencies": {
    "@types/node": "^16.4.3",
    "@types/terser-webpack-plugin": "^5.0.4",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "axios": "^0.21.1",
    "eslint": "^7.31.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "file-to-sha512": "^0.0.1",
    "husky": "^7.0.1",
    "prettier": "^2.3.2",
    "standardx": "^7.0.0",
    "ts-loader": "^9.2.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "webpack": "^5.46.0",
    "webpack-cli": "^4.7.2"
  }
}
