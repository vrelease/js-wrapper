{
  "name": "vrelease-bin",
  "version": "0.3.3-rc.1",
  "description": "binary wrapper for vrelease - a kiss solution to easily create project releases",
  "vrelease": {
    "version": "0.3.2"
  },
  "scripts": {
    "build:js": "tsc -p tsconfig.prod.json",
    "bump:dev": "ncu --upgrade --dep dev --target minor",
    "bump:prod": "ncu --upgrade --dep prod --target minor",
    "bump:all": "npm run bump:dev && npm run bump:prod",
    "fix:style": "prettier --no-semi --print-width 100 --single-quote --trailing-comma none --write '**/*.ts' && standardx --fix '**/*.ts'",
    "check:lint": "eslint --format=codeframe '**/*.ts' && standardx",
    "commit": "cz",
    "prerelease": "ts-node pre-release-steps.ts"
  },
  "main": "lib/wrapper.js",
  "types": "lib/wrapper.d.ts",
  "bin": {
    "vrelease": "lib/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vrelease/vrelease-js.git"
  },
  "engines": {
    "node": ">=10"
  },
  "files": [
    "icon.svg",
    "LICENSE",
    "bin/vrelease-*",
    "SHASUM512",
    "lib/wrapper.js",
    "lib/wrapper.d.ts",
    "lib/cli.js"
  ],
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "lint-staged": {
    "**/*.ts": [
      "npm run fix:style"
    ]
  },
  "author": {
    "name": "Caian R. Ertl",
    "email": "hi@caian.org",
    "url": "https://caian.org"
  },
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/vrelease/vrelease-js/issues"
  },
  "keywords": [
    "cli-app",
    "cli",
    "bin",
    "binary",
    "vrelease",
    "ci-cd",
    "continuous",
    "delivery",
    "pipeline",
    "release",
    "gitflow",
    "javascript",
    "js",
    "wrapper"
  ],
  "homepage": "https://github.com/vrelease/vrelease-js#readme",
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/node": "^16.11.21",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "axios": "^0.25.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "file-to-sha512": "^0.0.1",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "npm-check-updates": "^11.8.5",
    "prettier": "^2.5.1",
    "standardx": "^7.0.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
